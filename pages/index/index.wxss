/* pages/index/index.wxss */

/* 问候区域 */
.greeting-section {
  text-align: center;
  padding: var(--spacing-lg) 0;
  background: linear-gradient(135deg, #4CAF50 0%, #81C784 100%);
  color: white;
  margin: calc(-1 * var(--spacing-md)) calc(-1 * var(--spacing-md)) var(--spacing-md);
  border-radius: 0 0 24rpx 24rpx;
}

.greeting-text {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: var(--spacing-xs);
}

.date-info {
  font-size: 26rpx;
  opacity: 0.9;
  margin-bottom: var(--spacing-sm);
}

.privacy-indicator {
  justify-content: center;
  font-size: 24rpx;
  opacity: 0.8;
}

.privacy-icon {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

/* 快速记录区域 */
.quick-record-section {
  margin-top: 0;
}

.emotion-mode-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 4rpx;
  margin-bottom: var(--spacing-md);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: 26rpx;
  color: var(--text-secondary);
  border-radius: calc(var(--border-radius) - 4rpx);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
  font-weight: 500;
}

/* 表情选择器 */
.emoji-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.emoji-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  background: #f8f9fa;
}

.emoji-item.selected {
  border-color: var(--primary-color);
  background: #e8f5e8;
  transform: scale(1.05);
}

.emoji {
  font-size: 48rpx;
  margin-bottom: var(--spacing-xs);
}

.emotion-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 色彩选择器 */
.color-palette {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.color-item {
  aspect-ratio: 1;
  border-radius: 50%;
  border: 4rpx solid transparent;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.color-item.selected {
  border-color: var(--text-primary);
  transform: scale(1.1);
}

.color-overlay {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(0,0,0,0.6);
  color: white;
  text-align: center;
  padding: 8rpx;
  font-size: 20rpx;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.color-item.selected .color-overlay {
  transform: translateY(0);
}

.color-name {
  font-size: 20rpx;
}

/* 天气选择器 */
.weather-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-md);
}

.weather-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  background: #f8f9fa;
}

.weather-item.selected {
  border-color: var(--primary-color);
  background: #e8f5e8;
  transform: scale(1.05);
}

.weather-icon {
  font-size: 48rpx;
  margin-bottom: var(--spacing-xs);
}

.weather-name {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 强度滑块 */
.intensity-section {
  margin: var(--spacing-lg) 0;
}

.intensity-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  text-align: center;
}

.intensity-slider {
  width: 100%;
}

/* 快速标签 */
.quick-tags {
  margin: var(--spacing-lg) 0;
}

.tags-label {
  font-size: 28rpx;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
}

.tag-item {
  padding: var(--spacing-xs) var(--spacing-sm);
  background: #f0f0f0;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: var(--text-secondary);
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.tag-item.selected {
  background: var(--primary-color);
  color: white;
  transform: scale(1.05);
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-lg);
}

/* 今日统计 */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* AI洞察 */
.ai-insight .card-title {
  display: flex;
  align-items: center;
}

.ai-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: var(--spacing-xs);
}

.insight-content {
  font-size: 28rpx;
  color: var(--text-primary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.insight-actions {
  text-align: right;
}

.link-text {
  color: var(--primary-color);
  font-size: 26rpx;
}

/* 疗愈建议 */
.suggestion-content {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.suggestion-icon {
  width: 64rpx;
  height: 64rpx;
  margin-right: var(--spacing-md);
  border-radius: 50%;
}

.suggestion-text {
  flex: 1;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.suggestion-desc {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 底部提示 */
.bottom-tips {
  background: #fff3cd;
  border: 1rpx solid #ffeaa7;
  border-radius: var(--border-radius);
  padding: var(--spacing-md);
  margin-top: var(--spacing-lg);
}

.tip-content {
  font-size: 26rpx;
  color: #856404;
  text-align: center;
}

/* 详细记录弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: white;
  border-radius: var(--border-radius);
  overflow: hidden;
  animation: slideInUp 0.3s ease-out;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-md);
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
}

.modal-close {
  font-size: 48rpx;
  color: var(--text-muted);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-body {
  padding: var(--spacing-md);
}

.textarea {
  min-height: 120rpx;
  resize: none;
}

.char-count {
  text-align: right;
  font-size: 22rpx;
  color: var(--text-muted);
  margin-top: var(--spacing-xs);
}

.checkbox-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-sm) 0;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 4rpx;
  margin-right: var(--spacing-sm);
  position: relative;
}

.checkbox.checked {
  background: var(--primary-color);
  border-color: var(--primary-color);
}

.checkbox.checked::after {
  content: '✓';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 20rpx;
}

.modal-actions {
  display: flex;
  gap: var(--spacing-sm);
  padding: var(--spacing-md);
  border-top: 1rpx solid var(--border-color);
}

/* 加载状态 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
}

.loading-content {
  background: white;
  padding: var(--spacing-xl);
  border-radius: var(--border-radius);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-md);
}

.loading-content text {
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 响应式调整 */
@media screen and (max-width: 350px) {
  .emoji-grid,
  .color-palette,
  .weather-grid {
    grid-template-columns: repeat(3, 1fr);
  }
  
  .stats-grid {
    grid-template-columns: 1fr;
    gap: var(--spacing-sm);
  }
}

/* 动画效果 */
.emoji-item:active,
.color-item:active,
.weather-item:active,
.tag-item:active {
  transform: scale(0.95);
}

.card {
  animation: fadeIn 0.5s ease-out;
}

.card:nth-child(1) { animation-delay: 0.1s; }
.card:nth-child(2) { animation-delay: 0.2s; }
.card:nth-child(3) { animation-delay: 0.3s; }
.card:nth-child(4) { animation-delay: 0.4s; }