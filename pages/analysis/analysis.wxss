/* pages/analysis/analysis.wxss */

/* 时间选择器 */
.time-selector {
  margin-bottom: var(--spacing-md);
}

.selector-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 4rpx;
  margin-bottom: var(--spacing-md);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: 26rpx;
  color: var(--text-secondary);
  border-radius: calc(var(--border-radius) - 4rpx);
  transition: all 0.3s ease;
}

.tab-item.active {
  background: var(--primary-color);
  color: white;
  font-weight: 500;
}

.custom-range {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-sm);
}

.date-picker {
  padding: var(--spacing-xs) var(--spacing-sm);
  background: #f8f9fa;
  border-radius: var(--border-radius);
  border: 1rpx solid var(--border-color);
}

.picker-text {
  font-size: 26rpx;
  color: var(--text-primary);
}

.date-separator {
  font-size: 24rpx;
  color: var(--text-muted);
}

.period-summary {
  text-align: center;
}

.summary-text {
  font-size: 24rpx;
  color: var(--text-muted);
}

/* 趋势图 */
.trend-chart .card-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.chart-controls {
  display: flex;
  gap: var(--spacing-xs);
}

.control-item {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background: #f5f5f5;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.control-item.active {
  background: var(--primary-color);
  color: white;
}

.chart-container {
  position: relative;
  margin: var(--spacing-lg) 0;
}

.chart-canvas {
  width: 100%;
  height: 400rpx;
  border-radius: var(--border-radius);
  background: #fafafa;
}

.chart-empty {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
  color: var(--text-muted);
}

.empty-icon {
  width: 128rpx;
  height: 128rpx;
  margin-bottom: var(--spacing-sm);
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
}

.chart-legend {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  margin-top: var(--spacing-sm);
}

.legend-item {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.legend-color {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
}

.legend-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

/* 情绪统计 */
.stats-overview {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.overview-item {
  text-align: center;
}

.overview-number {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--primary-color);
  margin-bottom: var(--spacing-xs);
}

.overview-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.pie-chart-container {
  position: relative;
  display: flex;
  justify-content: center;
  margin: var(--spacing-lg) 0;
}

.pie-chart {
  width: 300rpx;
  height: 300rpx;
}

.pie-center-info {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.center-number {
  font-size: 36rpx;
  font-weight: 600;
  color: var(--primary-color);
}

.center-label {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-top: var(--spacing-xs);
}

.emotion-list {
  margin-top: var(--spacing-lg);
}

.emotion-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-sm) 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.emotion-item:last-child {
  border-bottom: none;
}

.emotion-info {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  width: 160rpx;
}

.emotion-emoji {
  font-size: 32rpx;
}

.emotion-name {
  font-size: 28rpx;
  color: var(--text-primary);
}

.emotion-progress {
  flex: 1;
  margin-left: var(--spacing-md);
}

.progress-bar {
  height: 16rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: var(--spacing-xs);
}

.progress-fill {
  height: 100%;
  border-radius: 8rpx;
  transition: width 1s ease;
}

.progress-text {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: var(--text-muted);
}

/* AI洞察 */
.ai-insights .card-title {
  display: flex;
  align-items: center;
  gap: var(--spacing-xs);
}

.ai-icon {
  width: 32rpx;
  height: 32rpx;
}

.insight-loading {
  margin-left: auto;
}

.loading-small {
  width: 32rpx;
  height: 32rpx;
  border-width: 2rpx;
}

.insights-list {
  margin-top: var(--spacing-md);
}

.insight-item {
  padding: var(--spacing-md);
  background: #f8f9ff;
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
  border-left: 6rpx solid var(--primary-color);
}

.insight-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.insight-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: var(--spacing-sm);
}

.insight-title {
  flex: 1;
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
}

.insight-confidence {
  background: var(--primary-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.insight-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.insight-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.action-link {
  color: var(--primary-color);
  font-size: 24rpx;
  padding: var(--spacing-xs) var(--spacing-sm);
  background: rgba(76, 175, 80, 0.1);
  border-radius: 20rpx;
}

.insight-empty {
  text-align: center;
  color: var(--text-muted);
  font-size: 26rpx;
  padding: var(--spacing-lg);
}

/* 模式识别 */
.pattern-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 4rpx;
  margin-bottom: var(--spacing-md);
}

.pattern-tab {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: 26rpx;
  color: var(--text-secondary);
  border-radius: calc(var(--border-radius) - 4rpx);
  transition: all 0.3s ease;
}

.pattern-tab.active {
  background: var(--primary-color);
  color: white;
  font-weight: 500;
}

.patterns-list {
  margin-top: var(--spacing-md);
}

.pattern-item {
  display: flex;
  padding: var(--spacing-md);
  background: #fff8e1;
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
  border-left: 6rpx solid #ffc107;
}

.pattern-icon {
  font-size: 32rpx;
  margin-right: var(--spacing-md);
  flex-shrink: 0;
}

.pattern-content {
  flex: 1;
}

.pattern-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.pattern-description {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-sm);
}

.pattern-confidence {
  font-size: 24rpx;
  color: #f57c00;
}

.pattern-tags {
  display: flex;
  gap: var(--spacing-xs);
  margin-top: var(--spacing-sm);
}

.pattern-tag {
  background: #e3f2fd;
  color: #1976d2;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.correlation-strength {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  margin-top: var(--spacing-sm);
  font-size: 24rpx;
  color: var(--text-secondary);
}

.strength-bar {
  flex: 1;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.strength-fill {
  height: 100%;
  background: linear-gradient(to right, #4caf50, #2196f3, #ff9800);
  border-radius: 4rpx;
}

.pattern-empty {
  text-align: center;
  padding: var(--spacing-xl);
  color: var(--text-muted);
}

/* 改善建议 */
.suggestions-list {
  margin-top: var(--spacing-md);
}

.suggestion-item {
  padding: var(--spacing-md);
  background: #f0f8f0;
  border-radius: var(--border-radius);
  margin-bottom: var(--spacing-md);
  border-left: 6rpx solid var(--primary-color);
}

.suggestion-header {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-sm);
}

.suggestion-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: var(--spacing-md);
  border-radius: 50%;
}

.suggestion-info {
  flex: 1;
}

.suggestion-title {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.suggestion-priority {
  font-size: 22rpx;
  color: var(--secondary-color);
}

.suggestion-score {
  background: var(--primary-color);
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.suggestion-content {
  font-size: 26rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: var(--spacing-md);
}

.suggestion-actions {
  display: flex;
  gap: var(--spacing-sm);
}

.suggestion-empty {
  text-align: center;
  color: var(--text-muted);
  font-size: 26rpx;
  padding: var(--spacing-lg);
}

/* 导出分享 */
.export-options {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.export-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: var(--spacing-xs);
  padding: var(--spacing-lg) var(--spacing-sm);
  min-height: 120rpx;
}

.btn-icon {
  width: 48rpx;
  height: 48rpx;
}

.privacy-note {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
  background: #fff3cd;
  padding: var(--spacing-md);
  border-radius: var(--border-radius);
  border: 1rpx solid #ffeaa7;
}

.privacy-icon {
  width: 32rpx;
  height: 32rpx;
  flex-shrink: 0;
}

.privacy-note text {
  font-size: 24rpx;
  color: #856404;
}

/* 报告弹窗 */
.report-modal {
  width: 90%;
  max-width: 700rpx;
  max-height: 80%;
}

.report-preview {
  margin-bottom: var(--spacing-md);
}

.report-canvas {
  width: 100%;
  height: 400rpx;
  border: 1rpx solid var(--border-color);
  border-radius: var(--border-radius);
}

.report-options {
  margin-top: var(--spacing-md);
}

.option-group {
  margin-bottom: var(--spacing-md);
}

.option-label {
  font-size: 28rpx;
  font-weight: 500;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
}

.option-tabs {
  display: flex;
  background: #f5f5f5;
  border-radius: var(--border-radius);
  padding: 4rpx;
}

.option-tab {
  flex: 1;
  text-align: center;
  padding: var(--spacing-sm);
  font-size: 26rpx;
  color: var(--text-secondary);
  border-radius: calc(var(--border-radius) - 4rpx);
  transition: all 0.3s ease;
}

.option-tab.active {
  background: var(--primary-color);
  color: white;
}

/* 响应式调整 */
@media screen and (max-width: 350px) {
  .stats-overview {
    grid-template-columns: 1fr;
    gap: var(--spacing-sm);
  }
  
  .export-options {
    grid-template-columns: 1fr;
  }
  
  .export-btn {
    flex-direction: row;
    justify-content: flex-start;
    min-height: 80rpx;
  }
}

/* 动画效果 */
.insight-item,
.pattern-item,
.suggestion-item {
  animation: slideInUp 0.5s ease-out;
}

.insight-item:nth-child(1) { animation-delay: 0.1s; }
.insight-item:nth-child(2) { animation-delay: 0.2s; }
.insight-item:nth-child(3) { animation-delay: 0.3s; }

.pattern-item:nth-child(1) { animation-delay: 0.1s; }
.pattern-item:nth-child(2) { animation-delay: 0.2s; }
.pattern-item:nth-child(3) { animation-delay: 0.3s; }

.suggestion-item:nth-child(1) { animation-delay: 0.1s; }
.suggestion-item:nth-child(2) { animation-delay: 0.2s; }
.suggestion-item:nth-child(3) { animation-delay: 0.3s; }

/* 加载状态 */
.insight-loading .loading-small {
  animation: spin 1s linear infinite;
}

/* 进度条动画 */
.progress-fill {
  animation: progressFill 1.5s ease-out;
}

@keyframes progressFill {
  from {
    width: 0%;
  }
}

/* 悬停效果 */
.control-item:active,
.tab-item:active,
.pattern-tab:active,
.option-tab:active {
  transform: scale(0.95);
}

.export-btn:active {
  transform: scale(0.98);
}